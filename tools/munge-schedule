#!/usr/bin/perl

# munge-schedule
#   A quick hack to convert the HTML generated by xsltproc to HTML
#   the works nicely with html2ps

while (<>) {
  s/<table/<table border/g;
  s/<tr/<tr valign="top"/g;
  s/<span[^>]* class="break"><\/span>/<br\/>/g;
  s/(<span[^>]* class="overview">)/<br\/>\1/g;

  print $_;
}
